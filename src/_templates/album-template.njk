---
layout: layouts/default.njk
pagination:
    data: albums
    size: 1
    alias: album
permalink: "albums/{{ album.slug }}/"
---


<div class="album">

    <main class="album__main">

    {% for file in album.files %}

        {# Text #}
        {% if file.fileType == 'text' %}
        <div class="album__block album__block--text" id="{{ file.fileID }}">
            <hgroup class="album__hgroup">
                <h3 class="album__head">{{ file.textHeading }}</h4>
                {% if file.textContents %}
                    <p class="album__subhead">{{ file.textContents }} </p>
                {% endif %}
            </hgroup>
            <p class="album__text-date">
                <a class="album__text-date-link" href="#{{ file.fileID }}"><span>‚Üù</span> {{ file.fileDateString }}</a> 
            </p>
        </div>
        {% endif %}

        {# Image #}
        {% if file.fileType == 'image' %}
            {% set src = ["src/album-assets/", album.slug, '/', file.fileName] | join %}
            {% image src, "", file.fileID %}
        {% endif %}

        {# Video #}
        {% if file.fileType == 'video' and file.fileBase %}
        <div class="album__block album__block--video js-video-block" id="{{ file.fileID }}">
            {% set videoOutputUrl = ["/video/", file.fileBase, ".mp4"] | join %}
            <video autoplay loop muted playsinline>
                <source src="{{ videoOutputUrl }}" />
            </video>
            <button class="album__video-toggle js-video-toggle" data-message-a="Play with sound" data-message-b="Mute">Play with sound</button>
        </div>
        {% endif %}


    {% endfor %}
    </main>

    <aside class="album__aside">
        {% include "sidebar.njk" %}
    </aside>


</div>
